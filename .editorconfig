# EditorConfig is awesome: https://editorconfig.org\n\n# top-most EditorConfig file\nroot = true\n\n[*.cs]\n# Use 4 spaces for indentation\nindent_style = space\nindent_size = 4\n\n# Set the charset for all files\ncharset = utf-8\n\n# Ensure files end with a newline\neol = lf\n\n# C# specific code style rules\n[*.cs]\n# C# files should be formatted according to SOLID principles\n# This includes naming conventions and style recommendations\nmax_line_length = 120\ntrim_trailing_whitespace = true\ninsert_final_newline = true\n\n# Naming conventions\n[*.cs]\n# Class names should be in PascalCase\n# Method names should be in PascalCase\n# Variable names should be in camelCase\n# Constants should be in UPPER_SNAKE_CASE\n